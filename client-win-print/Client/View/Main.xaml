<Window x:Class="Client.View.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.View"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Width="380" 
        Height="503.936" 
        Title="Tótem Impresión" 
        WindowStartupLocation="CenterScreen"
        Background="{ StaticResource bg-dark }">
    <Grid>
        <Label 
            Height="55" 
            Margin="10,0" 
            FontSize="22"
            VerticalAlignment="Top" 
            Content="Seleccione Impresora:" 
            VerticalContentAlignment="Center"
            Foreground="{ StaticResource fg-normal }" />
        <ListBox 
            x:Name="LstPrint" 
            SelectionChanged="LstPrint_SelectionChanged"
            Margin="10,60,10,73" />
        <Button 
            x:Name="BtnSave"
            Style="{ StaticResource btn-accent }"
            Height="58" 
            FontSize="20"
            Margin="10,0,10,10" 
            VerticalAlignment="Bottom" 
            Content="Seleccionar Impresora"
            Click="BtnSave_Click" />
    </Grid>
</Window>
