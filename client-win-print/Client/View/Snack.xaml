<Window x:Class="Client.View.Snack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.View"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        Title="Test" Height="64" Width="640" WindowStyle="None" WindowStartupLocation="Manual" AllowsTransparency="True" ResizeMode="NoResize">
    <Window.Background>
        <SolidColorBrush Opacity="0"></SolidColorBrush>
    </Window.Background>
    <Grid>
        <Border>
            <Border.Effect>
                <DropShadowEffect BlurRadius="50" Color="#ff000000" />
            </Border.Effect>
            <ContentControl>
                <Grid>
                    <Rectangle Fill="{ StaticResource bg-dark }" RadiusX="5" RadiusY="5" />
                    <Label x:Name="LblMsg" Margin="20,15,128,15" Foreground="{ StaticResource fg-normal }" VerticalAlignment="Center" FontSize="16">JajajjajJA xD</Label>
                    <Button Margin="560,15,15,15" Content="Aceptar" Style="{ StaticResource btn-primary }" Click="Button_Click" />
                </Grid>
            </ContentControl>
        </Border>
    </Grid>
</Window>
